<div>
	<table width="100%">
		<% for (var i=0;i < quizes.length; i++) { %>
			<tr>
				<td width="30%"><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
				<td width="30%"><%= quizes[i].tematica %></td>
				<% if (session.user) {%>
					<td width="20%"><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
					<td width="20%">
						<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
							<button type="submit" onclick="return confirm('Â¿Borrar pregunta <%= quizes[i].pregunta %>?')">Borrar</button>
						</form>
					</td>
				<% }%>
			</tr>
		<% } %>
	</table>
	<br/>
	<% if (session.user) {%>
		<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
	<% }%>
</div>
<form method="get" action="/quizes">
	<p>Buscar preguntas que contengan:</p>
	<input type="text" name="search" />
	<input type="submit" value="Buscar" />
</form>
